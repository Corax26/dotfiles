[user]
	email = corax26@gmail.com
	name = Kevin Brodsky
[http]
	postBuffer = 10480576
[credential]
	helper = cache --timeout=36000
[push]
	default = upstream
[merge]
	defaultToUpstream = true
	tool = gvimdiff
[core]
	excludesfile = ~/.gitignore_global
	abbrev = 12
[i18n]
	logOutputEncoding = UTF-8
[color]
	ui = auto
[pager]
	grep = false
[alias]
	a    = add
	br   = branch -vv
	brf  = branch -avv
	d    = !git-aw.sh diff
	dc   = !git --no-pager diff --check
	dcs  = !git --no-pager diff --check --staged
	dsc  = !git --no-pager diff --check --staged
	ds   = !git-aw.sh diff --staged
	la   = !git-aw.sh log
	l    = !git-aw.sh log -n 100
	lg   = !PAGER=less git log --decorate --graph
	lp   = !git-aw.sh log -p -n 100
	ls   = !git-aw.sh log --stat -n 100
	rl   = !git-aw.sh reflog
	s    = show --stat --patch
	sl   = !git --no-pager stash list --stat
	st   = status
	stnu = status -uno
[log]
	date = iso
	decorate = short
[sendemail]
	confirm = always
[format]
	coverLetter = auto
[pretty]
	fixes = Fixes: %h (\"%s\")
[stash]
	showPatch = true
[notes]
	displayRef = *
[include]
	path = .gitconfig_specific
[remote "origin"]
	fetch = +refs/notes/*:refs/notes/*
[diff]
	compactionHeuristic = true
[rebase]
	autoSquash = true
