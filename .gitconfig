[user]
	email = corax26@gmail.com
	name = Kevin Brodsky
[http]
	sslVerify = false
	postBuffer = 10480576
[credential]
	helper = cache --timeout=36000
[push]
	default = upstream
[merge]
	defaultToUpstream = true
	tool = gvimdiff
[core]
	excludesfile = ~/.gitignore_global
[i18n]
	logOutputEncoding = UTF-8
[color]
	ui = auto
[pager]
	grep = false
[alias]
	st = status
	stnu = status -uno
	lg = !PAGER=less git log --decorate --graph
	l = !GIT_DIR=$(git rev-parse --git-dir) git log -n 100
	lp = !GIT_DIR=$(git rev-parse --git-dir) git log -p -n 10
	ls = !GIT_DIR=$(git rev-parse --git-dir) git log --stat -n 100
	a = add
	br = branch
	brf = branch -avv
	d = diff
	ds = diff --staged
	s = show --stat --patch
	stl = !git --no-pager stash list --stat
[log]
	date = iso
	decorate = short
[sendemail]
	confirm = always
[format]
	coverLetter = auto
[pretty]
	fixes = Fixes: %h (\"%s\")
[stash]
	showPatch = true
[include]
	path = .gitconfig_specific

